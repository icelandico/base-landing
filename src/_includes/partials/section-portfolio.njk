<div class="py-4 px-8" id="portfolio">
  <h2 class="text-center">{{ site.portfolio }}</h2>
  <div class="flex flex-col md:flex-row gap-16 h-full mt-16">
    {%- for item in collections.portfolio %}
    <div class="bg-dark-primary basis-1/5 h-[350px] p-4 text-white rounded-md cursor-pointer">
      <img alt="{{ item.data.imgAlt }}" src="{{ item.data.image }}" class="w-full rounded-md h-28 object-cover">
      <p class="two-thirds my-4 font-bold text-xl">{{ item.data.title }}</p>
      <span>{{ item.data.description }}</span>
      <p>{{ content | safe }}</p>
    </div>
    {%- endfor -%}
  </div>
</div>